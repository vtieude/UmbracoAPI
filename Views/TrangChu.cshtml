	<div class="products">
		<h2 class="heading text-center">Danh mục sản phẩm</h2>
		<div class="row">
			@foreach( var page in products) {
				if (page.Name == "Sản phẩm") {
					var sanpham = page.Children;
					foreach(var sanphamitem in sanpham){
						var images = sanphamitem.GetPropertyValue<int>("hinhAnh");
						var image = Umbraco.TypedMedia(images);
						var url = String.Empty;
						if (image != null) {
							url = image.Url;
						}
						<div class="col-md-3 col-sm-6">
							<div class="box-image-text blog">
								<div class="top">
									<div class="image">
										<a href="@sanphamitem.Url"><img src="@url" alt="@(sanphamitem.GetPropertyValue<string>("tittle"))" class="img-responsive"></a>
									</div>
								</div>
								<div class="content">
									<h4><a href="@sanphamitem.Url">@(sanphamitem.GetPropertyValue<string>("tittle"))</a></h4>
									<p class="author-category">Sản xuất tại cơ sở Tấn Cường
									</p>
									<p class="intro">@(sanphamitem.GetPropertyValue<string>("moTa"))</p>
									<p class="price">Giá: @(sanphamitem.GetPropertyValue<string>("gia"))</p>
									<p class="read-more"><a href="@sanphamitem.Url" class="btn btn-template-main">Xem thêm</a>
									</p>
								</div>
							</div>
						</div>
						if ((sanpham.IndexOf(sanphamitem) == 3 ) || (sanpham.IndexOf(sanphamitem) == 7 )){
							<div class="clearfix"></div>
						}
					}
				}
			}
